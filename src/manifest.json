{
  "name": "旺中守門員（改）",
  "version": "0.5.0",
  "manifest_version": 2,

  "description": "從今天起，拒看旺中集團的網站。原始碼下載： https://github.com/leafwind/no-wang-wang",

  "background": {
    "scripts": ["background.js", "redirect.js"]
  },

  "icons": {
    "48": "icon-48.png",
    "128": "icon-128.png"
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "web_accessible_resources": [
    "notifyWebPage.js",
    "redirect.html"
  ],

  "options_page": "options.html",
  
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "webNavigation",
    "tabs",
    "*://*.chinatimes.com/*",
    "*://*.ctitv.com.tw/*",
    "*://*.ctv.com.tw/*",
    "*://*.want-daily.com/*",
    "*://*.ctweekly.com.tw/*",
    "*://*.wantchinatimes.com/*",
    "*://*.facebook.com/ctwgirl/*"
  ]
}